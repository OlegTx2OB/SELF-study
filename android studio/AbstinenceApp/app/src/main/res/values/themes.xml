<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.AbstinenceApp.smoking" parent="Theme.Material3.DayNight.NoActionBar">
      <item name="android:navigationBarColor">@color/pale_beige</item>
      <item name="android:statusBarColor">@color/pale_beige</item>

        <item name="colorText">@color/dark_chocolate</item>
        <item name="colorPrimary">@color/pale_beige</item>
        <item name="colorPrimaryVariant">@color/dark_pale_beige</item>
        <item name="colorSecondary">@color/dark_chocolate</item>
        <item name="colorAccent">@color/burnt_orange</item>
    </style>

    <style name="Theme.AbstinenceApp.drinking" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/mint_cream</item>
        <item name="android:statusBarColor">@color/mint_cream</item>

        <item name="colorText">@color/gunmetal</item>
        <item name="colorPrimary">@color/mint_cream</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorSecondary">@color/gunmetal</item>
        <item name="colorAccent">@color/amaranth_purple</item>

    </style>

    <style name="Theme.AbstinenceApp.xxx" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/gray_990</item>
        <item name="android:statusBarColor">@color/gray_990</item>

        <item name="colorText">@color/white</item>
        <item name="colorPrimary">@color/gray_990</item>
        <item name="colorPrimaryVariant">@color/gray_900</item>
        <item name="colorSecondary">@color/gray_900</item>
        <item name="colorAccent">@color/orange_300</item>

    </style>
</resources>