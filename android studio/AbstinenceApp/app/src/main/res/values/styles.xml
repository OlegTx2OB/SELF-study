<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="navigationBarStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="bigButtonsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/dark_chocolate</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="achieveFrameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/frame</item>
    </style>

    <style name="constraintLayoutFramesStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">116dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>

    </style>

    <style name="achieveTVStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/dark_chocolate</item>
        <item name="android:textSize">20sp</item>
    </style>




    <style name="styleIV">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="styleIB">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="styleTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="stylePB">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:max">1440</item>
        <item name="android:progress">0</item>
        <item name="android:rotation">270</item>
        <item name="android:layout_marginBottom">290dp</item>
    </style>

    <style name="colorStyleIBSmoking" parent="styleIB">
        <item name="android:background">@drawable/smoking_image_buttons_background</item>
    </style>

    <style name="colorStyleTVSmoking" parent="styleTV">
        <item name="android:textColor">@color/dark_chocolate</item>
    </style>

    <style name="colorStylePBSmoking" parent="stylePB">
        <item name="android:progressDrawable">@drawable/active_clock_ring</item>
    </style>

</resources>