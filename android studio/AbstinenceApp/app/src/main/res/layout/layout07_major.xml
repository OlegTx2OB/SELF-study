<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/constraintLayoutFramesStyle">

    <View android:id="@+id/f7"
        style="@style/achieveAndChroniclesFrameStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic07_major"
        app:layout_constraintEnd_toEndOf="@+id/guideLine"
        app:layout_constraintStart_toStartOf="@id/guideLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/topTV"
        style="@style/textViewStyle"
        android:text="@string/rank_7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideLine"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottomTV"
        style="@style/textViewStyle"
        android:text="@string/rank_7_condition"
        android:textSize="14sp"
        android:gravity="left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/topTV"
        app:layout_constraintEnd_toEndOf="@id/f1"
        app:layout_constraintTop_toBottomOf="@id/topTV"
        android:layout_marginBottom="8dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />
</androidx.constraintlayout.widget.ConstraintLayout>