<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageButton
        android:id="@+id/bottleBtn"
        style="@style/navigationBarStyle"
        android:src="@drawable/ic_bottle100"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cigaretteBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:tint="@color/dark_chocolate" />

    <ImageButton
        android:id="@+id/cigaretteBtn"
        style="@style/navigationBarStyle"
        android:src="@drawable/ic_cigarette100"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/xxxBtn"
        app:layout_constraintStart_toEndOf="@+id/bottleBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:tint="@color/burnt_orange" />

    <ImageButton
        android:id="@+id/xxxBtn"
        style="@style/navigationBarStyle"
        android:src="@drawable/ic_xxx100"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cigaretteBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:tint="@color/dark_chocolate" />

</androidx.constraintlayout.widget.ConstraintLayout>